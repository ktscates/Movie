{{#partial "content"}}

    <br>
    <br>
    <h1 style="text-align:center; font-weight:bolder;">Upload a video</h1>
    <hr>

    <form action="/uploads" method="post">

        <div class="form-group">
            <label for="picture">Picture</label>
            <input type="text" id="picture" name="picture" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="caption">Caption</label>
            <input type="text" id="caption" width="50" name="caption" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="video">Video Url</label>
            <input type="text" id="video" name="video" class="form-control" required>
        </div>


        <button class="btn btn-success" style="margin-bottom:20px; font-size:20px;">Save</button>

    </form>

{{/partial}}

{{>layout.hbs}}